@model List<Category>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <h1>Category</h1>
    <div class="d-flex justify-content-between">
        <h2>Available Categories</h2>
        <a asp-controller="Category" asp-action="Add" class="btn btn-primary">Add new category</a>
    </div>

    <table class="table table-striped">
       <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.OrderByDescending(u=>u.Name)){
        <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                    <td>
                    <div class="d-flex gap-3">
                            <a class="btn btn-secondary" asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Cateogry_Id">Edit</a>
                            <form asp-action="Delete"  method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger" >Delete</button>
                            </form>
                    </div></td>
        </tr>
            }
           </tbody>
    </table>


}
