@model Category
<h1>Edit category</h1>

<form method="post" class="d-flex flex-column gap-4">
    <div>
        <input asp-for="Cateogry_Id" hidden  />
    </div>
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="border p-2 py-1" placeholder="eg. Thriller"  /><br />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="DisplayOrder"></label>
        <input  asp-for="DisplayOrder" class="border p-2 py-1" placeholder="eg. Thriller" /><br />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>

    </div>


    <button class="btn btn-primary">Edit</button>
</form>